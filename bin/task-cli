#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

// Lấy arguments
$args = $argv;
array_shift($args); // bỏ tên file "task-cli"

// Command chính (add, list, remove...)
$command = $args[0] ?? null;
$commandArgs = array_slice($args, 1);

// run main script
$taskService = new \App\Service\TaskService();

$taskCli = new \App\Commands\TaskCommand($taskService);
$taskCli->run(array($command, $commandArgs));
